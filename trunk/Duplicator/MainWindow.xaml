<Window x:Class="Duplicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="428" Width="690" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Label Content="Select Folder:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Text="" Grid.Column="1" Grid.Row="0" Margin="5"/>
        <Button Content="Browse..." Command="{Binding BrowseCommand}" Grid.Column="2" Grid.Row="0" Margin="5"/>
        <Button Content="Start" Command="{Binding StartCommand}" Grid.Column="0" Grid.Row="1" Margin="5"/>
        <ProgressBar Grid.Column="1" Grid.Row="1" Margin="5"/>
        <Button Content="Cancel" Command="{Binding CancelCommand}" Grid.Column="2" Grid.Row="1" Margin="5"/>
        <TreeView Grid.ColumnSpan="3" Grid.Row="3">
       
        </TreeView>
    </Grid>
</Window>
